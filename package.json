{
  "name": "keeper",
  "version": "1.0.1",
  "description": "A electron application that shows a webview for keep.google.com",
  "main": "src/index.js",
  "scripts": {
    "less": "npx lessc src/style/less/style.less --clean-css tmp/style.min.css",
    "start": "npm run less && electron .",
    "build-macos": "npm run less && electron-builder --mac",
    "build-win": "npm run less && electron-builder --win",
    "build-linux": "npm run less && electron-builder --linux",
    "package": "npm run less && electron-builder --win --mac --linux",
    "publish": "npm run less && electron-builder --win --mac --linux -p onTagOrDraft"
  },
  "author": "David Trinchi",
  "license": "ISC",
  "repository": "https://github.com/trinchi/keeper",
  "dependencies": {
    "electron-log": "^3.0.1",
    "electron-store": "^2.0.0",
    "electron-updater": "^4.0.6"
  },
  "devDependencies": {
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "less": "^3.9.0",
    "less-plugin-clean-css": "^1.5.1"
  },
  "build": {
    "appId": "io.trinchi.keeper",
    "productName": "Keeper",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
